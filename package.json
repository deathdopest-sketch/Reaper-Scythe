{
  "name": "reaper-language",
  "displayName": "REAPER Language",
  "description": "Full language support for REAPER - The Undead Programming Language",
  "version": "1.3.0",
  "publisher": "reaper-lang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:reaper"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "reaper",
        "aliases": [
          "REAPER",
          "reaper"
        ],
        "extensions": [
          ".reaper"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/reaper-light.png",
          "dark": "./icons/reaper-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "reaper",
        "scopeName": "source.reaper",
        "path": "./syntaxes/reaper.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "reaper",
        "path": "./snippets/reaper.json"
      }
    ],
    "configuration": {
      "title": "REAPER Language",
      "properties": {
        "reaper.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic checking for REAPER files"
        },
        "reaper.enableAutocomplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete suggestions"
        },
        "reaper.executablePath": {
          "type": "string",
          "default": "reaper",
          "description": "Path to REAPER interpreter executable"
        }
      }
    },
    "commands": [
      {
        "command": "reaper.runFile",
        "title": "Run REAPER File",
        "category": "REAPER"
      },
      {
        "command": "reaper.compileBytecode",
        "title": "Compile to Bytecode",
        "category": "REAPER"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "reaper.runFile",
          "when": "resourceExtname == .reaper",
          "group": "navigation"
        },
        {
          "command": "reaper.compileBytecode",
          "when": "resourceExtname == .reaper",
          "group": "navigation"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "reaper",
        "required": [
          "file"
        ],
        "properties": {
          "file": {
            "type": "string",
            "description": "REAPER file to execute"
          },
          "args": {
            "type": "array",
            "description": "Command line arguments"
          },
          "useBytecode": {
            "type": "boolean",
            "description": "Use bytecode VM",
            "default": false
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}

